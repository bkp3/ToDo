<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">


    <EditText
        android:id="@+id/email_al"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Email..."/>



    <EditText
        android:id="@+id/password_al"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_al"
        android:hint="Enter paasword..."/>


    <Button
        android:id="@+id/signin_al"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password_al"
        android:layout_marginTop="10dp"
        android:text="Sign In"/>


    <TextView
        android:id="@+id/newuser_al"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signin_al"
        android:layout_margin="5dp"
        android:text="New user? click here"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/forgot_al"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newuser_al"
        android:layout_margin="5dp"
        android:text="Forgot Password? click here"
        android:textColor="@color/colorPrimary"/>

</RelativeLayout>